    public static void ReviewsMenu()
    {
    int ch;
    do{
    	System.out.println("---------------Reviews Menu-------------");
        System.out.println("1- Add A New Review");
        System.out.println("2- Edit Review ");
        System.out.println("3- Veiw Product With Average Rating");
        System.out.println("4- Veiw The Top 3 Products");
        System.out.println("5- Veiw Products With Average Rating > 4 Between 2 Cusomers");
        System.out.println("0- Return To The Main Menu");
        System.out.println("Select One Choice Plese:");
        System.out.println("----------------------------------------");
        ch = scan.nextInt();;
        switch (ch)
        {
            case 1:
                AddNewReview();
                break;
            case 2:
                revdata.EditReview();
                break;
            case 3:
            {
                System.out.println("Enter The Product ID:");
                int proid = scan.nextInt();

                while (!prodata.isvalidProductId(proid))
                {
                    System.out.println(" The ID Is Wrong , Try Again: ");
                    proid = scan.nextInt();
                }
                float Avr = avgRating(proid);
                System.out.println("The Average Rating for (" + proid + ") = " + Avr);
            }
            break;
            case 4:
                top3Products();
                break;
            case 5:
            {
                Customer cid1 =manageCustomers.getCustomerID();
                Customer cid2 =manageCustomers.getCustomerID();
                commonProducts(cid1.getCustomerId(), cid2.getCustomerId());
            }
            break;
            case 0:
                break;
            default:
            	System.out.println("Invalid Choice!, Try Again");
        }
        }while(ch!=0);
    }
    
    public static void AddNewReview()
    {
        System.out.println("Enter Cutomer ID:");
        int cID =scan.nextInt();
        while ( ! manageCustomers.customerIDIsFound(cID))
        {
            System.out.println("Customer ID Is Not Correct, Try Another One:");
            cID =scan.nextInt();
        }
        
        System.out.println("Enter The Product ID:");
        int proID =scan.nextInt();
        while ( ! prodata.isvalidProductId(proID))
        {
            System.out.println("Sorry Can't Add Review Somthing Wrong With Product ID , Try Another One:");
            proID =scan.nextInt();
        }
        
        Reviews rev = revdata.addNewReview(cID, proID);
        System.out.println("---------Review Added Successfully----------");
        System.out.println("--- Review With ID (" + rev.getReviewId()+ ") Has Been Added For " + rev.getProduct()+ "By Customer With ID (" + rev.getCustomer() 
        +") With Rate (" + rev.getRating() + ") And Comment: " + rev.getComment() +" ---" );
        System.out.println("--------------------------------------------");
    }
    
    //Get an average rating for product.
    public static float avgRating(int proid)
    {
        int count=0;
        float rate = 0;
        
        reviews.findFirst();
        while (! reviews.last())
        {
            if (reviews.retrieve().getProduct() == proid)
            {
                count++;
                rate += reviews.retrieve().getRating();
            }
            reviews.findNext();
        }
        if (reviews.retrieve().getProduct() == proid)
        {
            count++;
            rate += reviews.retrieve().getRating();
        }
        
        return (rate/count);
    }
    public static void top3Products()
    {
        LinkedPQ<Products> top3 = new LinkedPQ<Products> ();
        
        if (!products.empty())
        {
            products.findFirst();
            for (int i = 0 ; i < products.size() ; i++)
            {
                
                Products pro = products.retrieve();
                float AVGrating = avgRating (pro.productId);
                top3.enqueue(pro, AVGrating);
                
                products.findNext();
            }
            
        }
        
        System.out.println("The Top 3 Products By Average Rating (DESC Order)");
        for ( int j = 1 ; j <= 3 && top3.length() > 0 ; j++)
        {
            PQElement<Products> top = top3.serve();
            System.out.println("Product " + j + "  " + top.data.getProductId() 
                    + " " + top.data.getName() + " Average Rate (" + top.priority + ")" );
        }
    }
    public static void commonProducts( int cid1 , int cid2)
    {
        LinkedList<Integer> procust1 = new LinkedList<Integer> ();
        LinkedList <Integer> procust2 = new LinkedList <Integer> ();
        reviews = revdata.getreviewsData();
        
        if (! reviews.empty())
        {
            reviews.findFirst();
            for (int i =1 ;i <= reviews.size() ; i++)
            {
                if (reviews.retrieve().getCustomer() == cid1 )
                {
                    procust1.findFirst();
                    boolean found1 = false;
                    for (int x = 1; x <= procust1.size() ; x++)
                    {
                        if (procust1.retrieve() == reviews.retrieve().getProduct())
                        {
                            found1 = true;
                            break;
                        }
                        procust1.findNext();
                    }
                    procust1.findFirst();
                    if (! found1 )
                        procust1.insert(reviews.retrieve().getProduct());
                }
                
                if (reviews.retrieve().getCustomer() == cid2 )
                {
                    procust2.findFirst();
                    boolean found2 = false;
                    for (int x = 1; x <= procust2.size() ; x++)
                    {
                        if (procust2.retrieve() == reviews.retrieve().getProduct())
                        {
                            found2 = true;
                            break;
                        }
                        procust2.findNext();
                    }
                    
                    procust2.findFirst();
                    if (! found2 )
                        procust2.insert(reviews.retrieve().getProduct());
                }
                reviews.findNext();
            }
            
            procust1.display();
            procust2.display();
            LinkedPQ<Products> avrg4out5 = new LinkedPQ<Products> ();
            if (! procust1.empty() && ! procust2.empty())
            {
                procust1.findFirst();
                for ( int m =1; m <= procust1.size() ; m++)
                {
                    int proID = procust1.retrieve();
                    procust2.findFirst();
                    for (int n = 1 ; n <= procust2.size() ; n++)
                    {
                        if ( proID == procust2.retrieve())
                        {
                            float AVGrating = avgRating (proID);
                            if ( AVGrating >= 4)
                            {
                                Products pro = prodata.ProductInfo(proID);
                                avrg4out5.enqueue(pro, AVGrating);
                            }
                        }
                        procust2.findNext();
                    }
                    procust1.findNext();
                }                
                System.out.println("Common Products With Rate Above 4 : ");
                while (avrg4out5.length() > 0)
                {
                    PQElement<Products> product_rate = avrg4out5.serve();
                    System.out.println(" Product (" + product_rate.data.productId + ") " + product_rate.data.getName() + " with Rate " + product_rate.priority );
                    System.out.println(product_rate.data);
                    System.out.println("\n");
                }
            }
            else
                System.out.println("There Is No Common Products Between these Two Customers!");
        }
        else
            System.out.println("Something Went Wrong!");
    }
    
 
public static void createOrder(){

Order new_order =new Order() ;
int total_price = 0;

System.out.println("Enter order ID: ");
   int oid = scan.nextInt();

while ( manageOrders.orderIDIsFound(oid))
            {
                System.out.println("This ID is already exists! try again");
                oid = scan.nextInt();
            }
            new_order.setOrderId(oid);
            
System.out.println("Enter customer ID:");
            int cid = scan.nextInt();
            while(! manageCustomers.customerIDIsFound(cid))
            {
                System.out.println("This customer is not exists ! try again");
                cid = scan.nextInt();
            }
            new_order.setCustomerId(cid);
            
            char answer = 'y';
            while (answer == 'y' || answer == 'Y'){
            
                System.out.println("Enter product ID:");
                int pid = scan.nextInt();
               
                boolean found = false;
                
                 products.findFirst();
                for ( int i = 0 ;  i < products.size() ;i++)
                {
                    if (products.retrieve().getProductId() == pid)
                    {
                        if (products.retrieve().getStock() == 0 || products.retrieve().getStock() == -1)
                            System.out.println("Sorry product out stock or Archived product , try another time");
                     else
                        {
                            Products pp = products.retrieve();
                            products.remove();
                            pp.setStock(pp.getStock()-1);
                            products.insert(pp);
                            System.out.println("product added to order!");
                            found = true;
                                
                     new_order.addProduct(pp.getProductId());
                            total_price += pp.getPrice();
                        }
                         break;
                    }
                    products.findNext();
                }

                if (!found){
                        System.out.println(" Product ID does not exist");
                        return;
                  }      
                    System.out.println("Do you want to continue adding product? (Y/N)");
                answer = scan.next().charAt(0);
            }
             new_order.setTotal_price(total_price);
             try{
             System.out.print("Enter Order date in this format (dd/mm/yyyy): ");
             DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy");
             LocalDate date = LocalDate.parse(scan.next(),formatter);
             new_order.setOrderDate(date);

             }catch (DateTimeParseException e) {
                 System.out.println("Invalid date format! Use dd/MM/yyyy.");
             }             
             System.out.println("Enter new status  (pending, shipped, delivered, cancelled)");
            new_order.setStatus(scan.next());

            orders_list.insert(new_order);


             // add order to customer list
            customers_list.findFirst();
            for(int i = 0 ; i < customers_list.size(); i++)
            {
                if (customers_list.retrieve().getCustomerId() == new_order.getCustomerId())
                {
                    Customer cust = customers_list.retrieve();
                    customers_list.remove();
                    cust.addOrder(oid);
                    customers_list.insert(cust);
                    break;
                }
                customers_list.findNext();
            }   
            
            System.out.println("The Order has been successfully added ");
            System.out.println(orders_list.retrieve());
    }
    
    
    
public static LinkedList <Reviews> AllReviewsForCustomer(){
 
 System.out.println("Enter customer ID:");
            int cid = scan.nextInt();
            while(! manageCustomers.customerIDIsFound(cid))
            {
                System.out.println("This customer is not exists ! try again");
                cid = scan.nextInt();
            }
 LinkedList <Reviews> selectedReviews = new LinkedList<Reviews> ();
    reviews.findFirst();
            while (! reviews.last())
            {
                if ( reviews.retrieve().getCustomer() == cid)
                    selectedReviews.insert(reviews.retrieve());
                reviews.findNext();
            }
            if ( reviews.retrieve().getCustomer() == cid)
                selectedReviews.insert(reviews.retrieve());

            if (selectedReviews.empty())
                System.out.println("No reviews for customer " + cid) ;
                  
             else
            {
                
                selectedReviews.findFirst();
                while ( ! selectedReviews.last())
                {
                System.out.println(selectedReviews.retrieve()); 
                    
                   Products p =prodata.ProductInfo(selectedReviews.retrieve().getProduct());
                   System.out.println(p);
                   System.out.println("");
                   selectedReviews.findNext();
                }
                System.out.println(selectedReviews.retrieve());
                    
                   Products p =prodata.ProductInfo(selectedReviews.retrieve().getProduct());
                   System.out.println(p);
                   System.out.println("");
                }
                
                
                return selectedReviews;
    }  
    
    
public static void CancelOrder(){
    
            System.out.println("Enter order ID to cancel: ");
            int oid = scan.nextInt();
            Order cancel = manageOrders.searchOrderById(oid);
            
       while (cancel == null)
            {
                System.out.println("Order ID is not exists , try again");
                oid = scan.nextInt();
                cancel = manageOrders.searchOrderById(oid);
            }
            
             if ( manageOrders.cancelOrder(oid) == 1){
            
                customers_list.findFirst();
                for ( int i = 0 ; i < customers_list.size() ; i++)
                {
                    if (customers_list.retrieve().getCustomerId() == cancel.getCustomerId() )
                    {
                        Customer cust = customers_list.retrieve();
                        customers_list.remove();
                        cust.removeOrder(cancel.getOrderId());
                        customers_list.insert(cust);
                        break;
                    }
                    customers_list.findNext();
                    }
                    cancel.getProductIds().findFirst();
                    
                    for ( int i = 0 ; i < cancel.getProductIds().size() ; i++  ) {    
                
              
                
                       products.findFirst();
                        for (int j = 0 ; j < products.size() ; j++)
                        {
                            if (products.retrieve().getProductId() == cancel.getProductIds().retrieve())
                                products.retrieve().addStock(1);
                           
                            products.findNext();
                        }
                        
                        cancel.getProductIds().findNext();
                }
                System.out.println("order (" + cancel.getOrderId() + ") is canceled successfully") ;
                    
                    }    
                    
                    
                    } 
                     
                
                    
                    
                }
            
            
                    





