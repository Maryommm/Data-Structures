                Products pro = prodata.deleteProduct();
                boolean canDelete = true;       
                if(pro!=null){
                    if (pro.getReviews().size() == 0){
                        boolean founded = false;
                        orders_list.findFirst();
                        for ( int x = 0 ; x < orders_list.size() ; x++){
                            if (!orders_list.retrieve().getProductIds().empty()){
                                orders_list.retrieve().getProductIds().findFirst();
