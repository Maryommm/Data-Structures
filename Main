    public static void CollData(){
    
     System.out.println("loading data from CVSs files");
        products = prodata.getproductsData();
        customers_list = manageCustomers.getCustomers();
       orders_list = manageOrders.get_Orders();
        reviews = revdata.getreviewsData();
        
     ///add Orders To Customers
        customers_list.findFirst();
        for(int i = 0 ; i < customers_list.size(); i++)
        {
            orders_list.findFirst();
            for ( int j = 0 ; j < orders_list.size() ; j ++)
            {
                if (customers_list.retrieve().getCustomerId() == orders_list.retrieve().getCustomerId())
                {
                    int orderid =orders_list.retrieve().getOrderId();
                    customers_list.retrieve().addOrder(orderid);
                }
                orders_list.findNext();
            }
            customers_list.findNext();
        }
        
         ///add Rviews To products
        products.findFirst();
        for(int i = 0 ; i < products.size(); i++)
        {
            reviews.findFirst();
            for ( int j = 0 ; j < reviews.size() ; j ++)
            {
                if (products.retrieve().getProductId() == reviews.retrieve().getProduct())
                {
                    int rid =reviews.retrieve().getReviewId();
                    products.retrieve().addReview(rid);
                }
                reviews.findNext();
            }
            products.findNext();
        }
        
    }
  

    
    public static void productsMenu()
    {
